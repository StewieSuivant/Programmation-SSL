#Flags

CFLAGS =  
CPPFLAGS = 
LDFLAGS =-lpcap

.PHONY : clean help


sniff : sniff.o
	$(CC) ${CFLAGS} -o $@ $^ ${LDFLAGS}

sniff.o : sniff.c sniff.h
	$(CC) ${CFLAGS} -c $<  

clean:
	@rm -rf *.o $(EXE) *~

help :
	@echo -e "OPTION :"
	@echo -e "make clean : Remove all files generated by compilation"
	@echo -e "make help : Display the help"
