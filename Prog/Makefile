

#Flags

CFLAGS =  -Wall 
CPPFLAGS = -I ../include
LDFLAGS =-lm 

.PHONY : clean help

Server: Server.o
	$(CC) ${CFLAGS} -o $@ $^  `pkg-config openssl --libs`

Client: Client.o
	$(CC) ${CFLAGS} -o $@ $^  `pkg-config openssl --libs`

Client.o: Client.c
	$(CC) ${CFLAGS} -c $< `pkg-config openssl --cflags`

Server.o: Server.c
	$(CC) ${CFLAGS} -c $< `pkg-config openssl --cflags`

clean:
	@rm -rf *.o $(EXE) *~

help :
	@echo -e "OPTION :"
	@echo -e "make clean : Remove all files generated by compilation"
	@echo -e "make help : Display the help"
